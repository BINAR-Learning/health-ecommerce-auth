        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"aiman@example.com\",\n  \"password\": \"Password123!\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "login"]
        },
        "description": "Login with email and password to get JWT token"
      },
      "response": []
